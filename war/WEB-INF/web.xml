<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<context-param>
		<param-name>flickr_rest_url</param-name>
		<param-value>http://api.flickr.com/services/rest/?</param-value>
	</context-param>
	<context-param>
		<param-name>flickr_api_key</param-name>
		<param-value>7a9b50d4c46b4de08e4a61cf0ec4043c</param-value>
	</context-param>
	<context-param>
		<param-name>flickr_service_protocol</param-name>
		<param-value>format=json&nojsoncallback=1</param-value>
	</context-param>

	<!-- Servlets -->
	<servlet>
		<servlet-name>greetServlet</servlet-name>
		<servlet-class>com.picoo.services.server.GreetingServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>photoSrvServlet</servlet-name>
		<servlet-class>com.picoo.services.PhotoService</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>guestbook</servlet-name>
		<servlet-class>com.picoo.tutorial.GuestbookServlet</servlet-class>
	</servlet>

	<filter>
		<filter-name>authfilter</filter-name>
		<filter-class>com.picoo.tutorial.AuthenticationFilter</filter-class>
	</filter>

	<servlet-mapping>
		<servlet-name>guestbook</servlet-name>
		<url-pattern>/guestbook</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>greetServlet</servlet-name>
		<url-pattern>/picoo/greet</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>photoSrvServlet</servlet-name>
		<url-pattern>/photosrv/*</url-pattern>
	</servlet-mapping>

	<filter-mapping>
		<filter-name>authfilter</filter-name>
		<url-pattern>/guestbook</url-pattern>
	</filter-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>Picoo.html</welcome-file>
	</welcome-file-list>

</web-app>
